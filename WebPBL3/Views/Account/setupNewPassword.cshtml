<div class="login-context">
    <div class="login-container">
        <img src="/images/vector-logo.png" alt="Showroom Logo" class="car-logo">
        <h2 style="text-align: center">Thiết lập mật khẩu mới</h2>
        <form method="post">
            @if (TempData["Error"] != null)
            {
                <div class="text-danger">
                    <span><b>Xin lỗi!</b> - @TempData["Error"] </span>
                </div>
            }
            <div class="form-group">
                <label for="otp">Mã OTP:</label>
                <input type="text" class="form-control" id="otp" name="otp">
            </div>
            <div class="form-group">
                <label for="passw">Mật khẩu mới:</label>
                <input type="password" class="form-control" id="passw" name="password">
            </div>
            <div class="form-group">
                <label for="retypepw">Mật khẩu nhập lại:</label>
                <input type="password" class="form-control" id="retypepw" name="retypepassword">
            </div>
            <button type="submit" class="btn btn-custom btn-block mt-4">Thiết lập mật khẩu mới</button>
        </form>
        <div class="footer">
            <p>
                Quay lại trang <a href="@Url.Action("Login", "Account")"> Đăng kí ngay</a>
            </p>
        </div>
    </div>
</div>
