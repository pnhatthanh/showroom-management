<div class="h-100 w-100 d-flex justify-content-center alialign-items-center" style="padding-top: 95px;">
    <div class="col-md-5 border p-4 mt-5 mb-5 rounded">
        <h2 style="text-align: center">Thay đổi mật khẩu</h2>
        <form method="post" asp-action="ChangePassword">
            @if (TempData["Error"] != null)
            {
                <div class="text-danger">
                    <span><b>Xin lỗi!</b> - @TempData["Error"] </span>
                </div>
            }
            <div class="form-group">
                <label class="control-label">Mật khẩu hiện tại:</label>
                <input type="password" name="password" class="form-control infor-account">
            </div>
            <div class="form-group">
                <label class="control-label">Mật khẩu mới:</label>
                <input type="password" name="newPassword" class="form-control infor-account">
            </div>
            <div class="form-group">
                <label class="control-label">Nhập lại mật khẩu:</label>
                <input type="password" name="retypePassword" class="form-control infor-account">
            </div>
            <button type="submit" class="btn btn-custom btn-block">Thay đổi mật khẩu</button>
        </form>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById('ftco-navbar').style.backgroundColor = 'black';
    });
</script>