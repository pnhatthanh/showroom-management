<div class="section2">
    <div class="container">
         <div class="tren">
            <h1>Tin Tức</h1>
         </div>

         <div class="duoi">
            <div class="trai">
                    <div class="row">
                        @foreach (var news in Model)
                        {
                            string[] words1 = news.Title.Split(' ');
                            string Titles = string.Join(" ", words1.Take(10));
                            string[] words2 = news.Content.Split(' ');
                            string Contents = string.Join(" ", words2.Take(30)) + "...";
                                <a asp-controller="News" asp-action="DetailUser" asp-route-id="@news.NewsID" >
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="box">
                                            <div class="anh">
                                                  <img src="~/images/@news.Photo" />
                                            </div>
                                            <div class="text">
                                                <h3>@Titles</h3>
                                                    <span>@news.CreateAt.ToString("dd/MM/yyyy")</span>
                                                <p>@Contents</p>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                        }
                    </div>
            </div>
            <div class="phai">
                <h2>Tin nổi bật</h2>
               
                    <div class="row">
                        @foreach (var news in Model.Take(4))
                        {
                            string[] words1 = news.Title.Split(' ');
                            string Titles = string.Join(" ", words1.Take(8)) + ". . .";
                                <a asp-controller="News" asp-action="DetailUser" asp-route-id="@news.NewsID">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="box">
                                            <div class="anh1">
                                                  <img src="~/images/@news.Photo" />
                                            </div>
                                            <div class="text1">
                                                <h3>@Titles</h3>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                        }
                    </div>

            </div>
       </div>
     </div>
      
     
</div>
 
<!-- phân trang -->
<div class="pagination">
    <a href="#" class="prev">&laquo; Trang trước</a>
    <a href="#" class="next">Trang tiếp theo &raquo;</a>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
    var currentPage = 1;
    var itemsPerPage = 4; // Số lượng tin tức trên mỗi trang
    var items = document.querySelectorAll('.section2 .duoi .trai .box'); // Lấy danh sách các tin tức
    var totalPages = Math.ceil(items.length / itemsPerPage); // Tính tổng số trang

    function showPage(page) {
        var startIndex = (page - 1) * itemsPerPage;
        var endIndex = startIndex + itemsPerPage;

        items.forEach(function (item, index) {
            if (index >= startIndex && index < endIndex) {
                item.style.display = 'flex'; // Hiển thị các phần tử tin tức
            } else {
                item.style.display = 'none'; // Ẩn các phần tử tin tức không nằm trong trang hiện tại
            }
        });
    }

    // Hiển thị trang đầu tiên khi trang được tải
    showPage(currentPage);

    // Xử lý sự kiện click trên nút Trang trước
    document.querySelector('.prev').addEventListener('click', function (e) {
        e.preventDefault();
        if (currentPage > 1) {
            currentPage--;
            showPage(currentPage);
        }
    });

    // Xử lý sự kiện click trên nút Trang tiếp theo
    document.querySelector('.next').addEventListener('click', function (e) {
        e.preventDefault();
        if (currentPage < totalPages) {
            currentPage++;
            showPage(currentPage);
        }
    });
});

</script>

